<body>
    <form method="POST" enctype="multipart/form-data" id = "updateForm">
        <div class="container">
            <img class="profileBackground">
            <label for="background" class="backgroundLabel">
                <div class="labelMessage">Choose an image</div>
                <i class="fa-solid fa-camera backgroundIcon"></i>
            </label>
            <input type="file" name="background" id="background" style="display: none;" accept="image">
            <img class="avatar">
            <label for="avatarInput" class="avatarLabel">
                <i class="fa-solid fa-camera"></i>
            </label>
            <input type="file" name="avatar" id="avatarInput" style="display: none;" accept="image">
            <div class="saveBtn">Save</div>
            <div class="infoBoard">
                <div class="name"><span class="data"><%-data[0].alias%></span><input type="text" name="alias"
                        class="fieldEditor"><i class="fa-solid fa-pen-to-square editBtn"></i></div>
                <div class="info">Gender: <span class="data"><%-data[0].gender%></span>
                    <select name="gender" class="fieldEditor">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <i class="fa-solid fa-pen-to-square editBtn"></i>
                </div>
                <div class="info realName">Real Name: <span class="realName data"><%-data[0].realName%></span><input
                        type="text" name="realName" class="fieldEditor"><i class="fa-solid fa-pen-to-square editBtn"></i></div>
                <div class="info">Workplace: <span class="data"><%-data[0].workplace%></span><input type="text" name="workplace"
                        class="fieldEditor"><i class="fa-solid fa-pen-to-square editBtn"></i></div>
                <div class="info">Education: <span class="data"><%-data[0].education%></span><input type="text" name="education"
                        class="fieldEditor"><i class="fa-solid fa-pen-to-square editBtn"></i></div>
                <div class="info interestInfo">Interests:
                </div>
            </div>
        </form>
            <div class="feedBoard">
                <div class="feedBtns">
                    <div class="feedBtn">On the way</div>
                    <div class="feedBtn">Delivered</div>
                </div>
                <div class="boardElement">
                    <div class="boardItem">
                        <img src="/Assets/Images/Gallery/bird-1045954_640.jpg" class="itemImg">
